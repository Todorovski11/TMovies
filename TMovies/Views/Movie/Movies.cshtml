@model List<TMovies.Models.Movie>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Movies</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="~/css/style.css" rel="stylesheet" />
    <style>
        /* Custom CSS for movie cards */
        .movie-card {
            position: relative;
            width: 100%;
            height: 100%;
            transition: transform 0.5s;
            transform-style: preserve-3d;
            cursor: pointer;
            perspective: 1000px; /* Required for 3D effect */
        }

            .movie-card:hover {
                transform: rotateY(180deg);
            }

        .front, .back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
        }

        .front {
            position: relative; /* Ensure relative positioning for absolute elements */
            z-index: 2;
            background-color: #000;
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Ensure space between title and metadata */
            align-items: center;
            text-align: center;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Ensure child elements don't overflow */
            height: 100%; /* Ensure the front side fills the entire container height */
        }


            .front img {
                max-width: 100%;
                max-height: 100%; /* Ensure image fills the entire front side */
                object-fit: cover; /* Ensure the image fills the available space */
            }

        .card-meta {
            display: flex;
            justify-content: flex-start;
            align-items: center;
        }

        .duration,
        .rating {
            margin-bottom: 5px; /* Adjust spacing between metadata elements */
        }




        .card-meta > * {
            margin-right: 10px; /* Adjust spacing between metadata elements */
        }



        .back {
            transform: rotateY(180deg);
            z-index: 1;
            padding: 20px;
            color: #fff; /* Set text color to white */
            background-color: #000; /* Set background color to black */
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            backface-visibility: hidden; /* Ensure the back side is hidden until flipped */
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-subtitle {
            font-size: 1rem;
            color: #666;
            margin-bottom: 15px;
        }

        .list-unstyled {
            margin-top: 0;
            padding-left: 0; /* Remove left padding */
            text-align: center; /* Center-align the entire list */
            margin-top: 10px;
        }

        .actors-list {
            display: inline-block; /* Make the actors list display inline */
            text-align: justify; /* Justify-align the actors' names within the list */
            max-width: 100%; /* Ensure the list doesn't exceed the container width */
        }

        .list-unstyled li {
            font-size: 0.9rem;
            color: #666;
            display: inline; /* Ensure list items display inline */
            margin: 0 5px; /* Adjust margin as needed */
        }

        .title-wrapper {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            height: 100%;
            padding-right: 10px; /* Adjust as needed for spacing */
        }
    </style>
</head>
<body>
    <div class="mb-3">
        <a href="@Url.Action("CreateMovie", "Movie")" class="btn btn-primary" @if (!User.Identity.IsAuthenticated)
        {
            <text>onclick="showLoginPopup()"</text>
        }>Create New Movie</a>
    </div>
    <main>
        <article>
            <section class="tv-series">
                <div class="container">
                    <p class="section-subtitle">Movie Library</p>
                    <h2 class="h2 section-title">Movies</h2>
                    <ul class="movies-list">
                        @foreach (var movie in Model)
                        {
                            <li>
                                <div class="movie-card">
                                    <!-- Front side of the card -->
                                    <div class="front card-body">
                                        <!-- Movie banner -->
                                        <a href="./movie-details.html">
                                            <figure class="card-banner">
                                                <img src="@movie.ImgLink" alt="@movie.Title" style="max-width: 100%; height: auto;">
                                            </figure>
                                        </a>
                                        <!-- Movie title -->
                                        <div class="title-wrapper">
                                            <a href="@movie.IMDbLink">
                                                <h3 class="card-title">@movie.Title</h3>
                                            </a>
                                        </div>
                                        <!-- Movie metadata -->
                                        <div class="card-meta d-flex">
                                            <!-- Rating -->
                                            <div class="mr-3 d-flex align-items-center">
                                                <i class="far fa-star text-white"></i>
                                                <data class="ml-1 text-white">@movie.Rating</data>
                                            </div>
                                            <!-- Release year -->
                                            <div class="d-flex align-items-center">
                                                <i class="far fa-calendar text-white"></i>
                                                <time class="ml-1 text-white" datetime="2022">@movie.ReleaseDate.Year</time>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Back side of the card -->
                                    <div class="back card-body">
                                        <!-- Movie details -->
                                        <h3 class="card-title"><a href="@movie.IMDbLink">@movie.Title</a></h3>
                                        <p>@movie.Plot</p>
                                        <p>Director: @movie.Director</p>
                                        <!-- Actors -->
                                        <ul class="list-unstyled">
                                            <p>Actors</p>
                                            <div class="actors-list">
                                                @foreach (var movieActor in movie.Actors)
                                                {
                                                    @if (movieActor.Actor != null)
                                                    {
                                                    <li>@movieActor.Actor.Name</li>
                                                    }
                                                }
                                    </div>
                        </ul>
                        <!-- Delete and Edit buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("EditMovie", "Movie", new { id = @movie.Id })" class="btn btn-primary"><i class="fa-solid fa-gear" style="color: #FFD43B;"></i>Edit</a>
                            <button type="button" class="btn btn-primary" style="color: red;" onclick="showDeleteModal('@movie.Id')"><i class="fa fa-trash" aria-hidden="true"></i>Delete</button>
                        </div>
                    </div>
                    </div>
                    </li>
                        }
                </ul>
                </div>
            </section>
        </article>
    </main>


    <!-- Modal for delete confirmation -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this movie?
                    <input type="hidden" id="deleteMovieId" value="">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="deleteMovie()">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery and Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- JavaScript for delete confirmation -->
    <script>
        function handleCreateClick(event) {
            if (!@User.Identity.IsAuthenticated) {
                event.preventDefault(); // Prevent the default action (i.e., redirect)
                showLoginPopup(); // Show the pop-up message
            }
        }
        function showDeleteModal(movieId) {
            $('#deleteMovieId').val(movieId);
            $('#deleteModal').modal('show');
        }
        // Function to show pop-up message
        function showLoginPopup() {
            alert("You need to log in to access this feature.");
        }

        // Function to handle movie deletion
        function deleteMovie() {
            var movieId = $('#deleteMovieId').val();
            // Perform AJAX request to delete the movie with movieId
            $.ajax({
                url: '/Movie/DeleteMovie/' + movieId,
                method: 'DELETE',
                success: function (response) {
                    if (response.success) {
                        // Handle successful deletion
                        $('#deleteModal').modal('hide');
                        location.reload();
                    } else {
                        // Handle deletion failure
                        console.error("Deletion failed: " + response.error);
                    }
                },
                error: function (xhr, status, error) {
                    // Handle AJAX error
                    console.error("AJAX error: " + error);
                }
            });
        }
    </script>
</body>
</html>