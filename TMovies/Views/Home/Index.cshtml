@model TMovies.Models.ViewModels.IndexViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Movies</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="~/css/style.css" rel="stylesheet" />
    <style>
        .movie-card {
            position: relative;
            width: 100%;
            height: 100%;
            transition: transform 0.5s;
            transform-style: preserve-3d;
            cursor: pointer;
            perspective: 1000px; /* Required for 3D effect */
        }

            .movie-card:hover {
                transform: rotateY(180deg);
            }

        .front, .back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
        }

        .front {
            position: relative; /* Ensure relative positioning for absolute elements */
            z-index: 2;
            background-color: #000;
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Ensure space between title and metadata */
            align-items: center;
            text-align: center;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Ensure child elements don't overflow */
            height: 100%; /* Ensure the front side fills the entire container height */
        }


            .front img {
                max-width: 100%;
                max-height: 100%; /* Ensure image fills the entire front side */
                object-fit: cover; /* Ensure the image fills the available space */
            }

        .card-meta {
            display: flex;
            justify-content: flex-start;
            align-items: center;
        }

        .duration,
        .rating {
            margin-bottom: 5px; /* Adjust spacing between metadata elements */
        }




        .card-meta > * {
            margin-right: 10px; /* Adjust spacing between metadata elements */
        }



        .back {
            transform: rotateY(180deg);
            z-index: 1;
            padding: 20px;
            color: #fff; /* Set text color to white */
            background-color: #000; /* Set background color to black */
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            backface-visibility: hidden; /* Ensure the back side is hidden until flipped */
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-subtitle {
            font-size: 1rem;
            color: #666;
            margin-bottom: 15px;
        }

        .list-unstyled {
            margin-top: 0;
            padding-left: 0; /* Remove left padding */
            text-align: center; /* Center-align the entire list */
            margin-top: 10px;
        }

        .actors-list {
            display: inline-block; /* Make the actors list display inline */
            text-align: justify; /* Justify-align the actors' names within the list */
            max-width: 100%; /* Ensure the list doesn't exceed the container width */
        }

        .list-unstyled li {
            font-size: 0.9rem;
            color: #666;
            display: inline; /* Ensure list items display inline */
            margin: 0 5px; /* Adjust margin as needed */
        }

        .title-wrapper {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            height: 100%;
            padding-right: 10px; /* Adjust as needed for spacing */
        }
    </style>
</head>
<header class="header" data-header>
    <div class="container">

        <div class="overlay" data-overlay></div>

        <div class="header-actions">

            <button class="search-btn">
                <ion-icon name="search-outline"></ion-icon>
            </button>
            @if (User.Identity.IsAuthenticated)
            {
                <span class="logged-in-user" style="color: white; font-size: 1.2rem;">@User.Identity.Name</span>

            }
            else
            {
                <button class="btn btn-primary"> <a href="@Url.Action("Login", "Account")">Sign In</a></button>
            }

        </div>

        <button class="menu-open-btn" data-menu-open-btn>
            <ion-icon name="reorder-two"></ion-icon>
        </button>

        <nav class="navbar" data-navbar>
            <ul class="navbar-list align-items-start">
                <!-- Added align-items-start -->

                <li>
                    <a href="@Url.Action("Index", "Home")" class="navbar-link">Home</a>
                </li>

                <li>
                    <a href="@Url.Action("Movies", "Movie")" class="navbar-link">Movies</a>
                </li>

                <li>
                    <a href="@Url.Action("TvShows", "TvShow")" class="navbar-link">Tv Shows</a>
                </li>

            </ul>


        </nav>

    </div>
</header>


<body>
    <!-- Bootstrap Carousel for image slider -->
    <!-- Bootstrap Carousel for image slider -->
    @{
        var random = new Random();
        var shuffledMovies = Model.Movie.OrderBy(x => random.Next()).ToList();
        var shuffledTvShows = Model.TvShow.OrderBy(x => random.Next()).ToList();
    }

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < shuffledMovies.Count + shuffledTvShows.Count; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@if (i == 0) {
            <text>active</text>
            }"></li>
            }
        </ol>

        <div class="carousel-inner">
            @foreach (var movie in shuffledMovies)
            {
                <div class="carousel-item @if (shuffledMovies.IndexOf(movie) == 0) {
            <text>active</text>
                }">
                        <img class="d-block w-100" src="@movie.ImgBanner" alt="@movie.Title" style="max-height: 700px; object-fit: cover;">
                    </div>
            }

            @foreach (var tvShow in shuffledTvShows)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@tvShow.ImgBanner" alt="@tvShow.Title" style="max-height: 700px; object-fit: cover;">
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <main>
        <article>
            <section class="tv-series">
                <div class="container">
                    <p class="section-subtitle">Movie Library</p>
                    <h2 class="h2 section-title">Movies</h2>
                    <ul class="movies-list">
                        @foreach (var movie in Model.Movie)
                        {
                            <li>
                                <div class="movie-card">
                                    <!-- Front side of the card -->
                                    <div class="front card-body">
                                        <!-- Movie banner -->
                                        <a href="./movie-details.html">
                                            <figure class="card-banner">
                                                <img src="@movie.ImgLink" alt="@movie.Title" style="max-width: 100%; height: auto;">
                                            </figure>
                                        </a>
                                        <!-- Movie title -->
                                        <div class="title-wrapper">
                                            <a href="@movie.IMDbLink">
                                                <h3 class="card-title">@movie.Title</h3>
                                            </a>
                                        </div>
                                        <!-- Movie metadata -->
                                        <div class="card-meta d-flex">
                                            <!-- Rating -->
                                            <div class="mr-3 d-flex align-items-center">
                                                <i class="far fa-star text-white"></i>
                                                <data class="ml-1 text-white">@movie.Rating</data>
                                            </div>
                                            <!-- Release year -->
                                            <div class="d-flex align-items-center">
                                                <i class="far fa-calendar text-white"></i>
                                                <time class="ml-1 text-white" datetime="2022">@movie.ReleaseDate.Year</time>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Back side of the card -->
                                    <div class="back card-body">
                                        <!-- Movie details -->
                                        <h3 class="card-title"><a href="@movie.IMDbLink">@movie.Title</a></h3>
                                        <p>@movie.Plot</p>
                                        <p>Director: @movie.Director</p>
                                        <!-- Actors -->
                                        <ul class="list-unstyled">
                                            <p>Actors</p>
                                            <div class="actors-list">
                                                @foreach (var movieActor in movie.Actors)
                                                {
                                                    @if (movieActor.Actor != null)
                                                    {
                                                    <li>@movieActor.Actor.Name</li>
                                                    }
                                                }
                                    </div>
                        </ul>
                    </div>
                    </div>
                    </li>
                        }
                </ul>
                </div>
            </section>
            <section class="tv-series">
                <div class="container">
                    <p class="section-subtitle">Tv Show Library</p>
                    <h2 class="h2 section-title">Tv Shows</h2>
                    <ul class="movies-list">
                        @foreach (var movie in Model.TvShow)
                        {
                            <li>
                                <div class="movie-card">
                                    <div class="front card-body">
                                        <a href="./movie-details.html">
                                            <figure class="card-banner">
                                                <img src="@movie.ImgLink" alt="@movie.Title" style="max-width: 100%; height: auto;">
                                            </figure>
                                        </a>
                                        <div class="title-wrapper">
                                            <a href="@movie.IMDbLink">
                                                <h3 class="card-title">@movie.Title</h3>
                                            </a>
                                        </div>
                                        <div class="card-meta d-flex">
                                            <div class="mr-3 d-flex align-items-center">
                                                <data class="ml-1 text-white">SS @movie.Seasons</data>
                                            </div>
                                            <div class="mr-3 d-flex align-items-center">
                                                <data class="ml-1 text-white">EP @movie.Episodes</data>
                                            </div>
                                            <div class="mr-3 d-flex align-items-center">
                                                <i class="far fa-star text-white"></i>
                                                <data class="ml-1 text-white">@movie.Rating</data>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <i class="far fa-calendar text-white"></i>
                                                <time class="ml-1 text-white" datetime="2022">@movie.Year.Year</time>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="back card-body">
                                        <h3 class="card-title"><a href="@movie.IMDbLink">@movie.Title</a></h3>
                                        <p>@movie.Plot</p>
                                        <p>Director: @movie.Director</p>
                                        <ul class="list-unstyled">
                                            <p>Actors</p>
                                            <div class="actors-list">
                                                @foreach (var movieActor in movie.Actors)
                                                {
                                                    @if (movieActor.Actor != null)
                                                    {
                                                    <li>@movieActor.Actor.Name</li>
                                                    }
                                                }
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </li>
                        }
                </ul>
                </div>
            </section>
        </article>
    </main>
</body>
</html>
